
<%= form_tag({ :controller => 'auth', :action => 'authenticate'}, :method => 'post', :role => 'form', :class => 'form-login') do %>
	<h2 class="form-signin-heading">Please sign in</h2>
	<div class="form-group">
		<%= label_tag(:email, "Email") %>
		<div class="input-group">
			<span class="input-group-addon"><i class="icon-envelope"></i></span>
			<%= email_field_tag :email, nil, :class => 'form-control', :placeholder => 'Email' %>
		</div>
	</div>
	<div class="form-group">
		<%= label_tag :password %>
		<div class="input-group">
			<span class="input-group-addon"><i class="icon-lock"></i></span>
			<%= password_field_tag :password, nil, :class => 'form-control', :placeholder => 'Password' %>
		</div>
	</div>
	<div class="checkbox">
		<%= label_tag :remeberme, "Remember Me" %>
		<%= check_box_tag :remeberme, true, true %>
	</div>
	<%= submit_tag("Register", :class => 'btn btn-primary') %>
<% end %>