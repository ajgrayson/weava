<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @item[:name] %></h3>
  </div>
  <div class="panel-body">
    <textarea style="display:none" id="content_source"><%= @item[:content] %></textarea>
    <div id="content_view"></div>
  </div>
</div>
<div>
  <%= link_to "Edit", edit_project_item_path(@item[:project_id], @item[:id]), :class => 'btn btn-default' %>
  <%= link_to "Back to Project", project_path(@project), :class => 'btn' %>
</div>

<% if @history %>
<br />
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="icon-time"></i> History</h3>
  </div>
  <table class="table">
  <thead>
    <tr>
      <th>Message</th>
      <th>Author</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
    <% @history.each do |c| %>
      <tr>
        <td><%= link_to c[:message], project_item_version_path(@item[:project_id], @item[:id], c[:oid], c[:commit_oid]) %></td>
        <td><%= c[:author] %></td>
        <td><%= c[:time] %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
<% end %>