<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Merge conflicts for <%= @project.name %></h3>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <td>Our Path</td>
          <td>Their Path</td>
        </tr>
      </thead>
      <tbody>
        <% @conflicts.each do |c| %>
          <tr>
            <td><%= c[:our_path] %></td>
            <td><%= c[:their_path] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
