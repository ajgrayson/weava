<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @file[:name] %></h3>
  </div>
  <div class="panel-body">
    
  <form method="post" action="/projects/<%= @project.id.to_s %>/updatefile/<%= @file[:oid] %>">

  <%= form_tag "/projects/" + @project.id.to_s + "/createfile" do %>

    <div class="form-group">
      <%= label_tag "content" %>
      <%= text_area_tag "content", @blob.content, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= submit_tag "Save", :class => 'btn btn-primary' %>
        <%= link_to "Cancel", project_path(@project), :class => 'btn' %>
    </div>

    <% end %>

  </div>

</div>